<Window
    x:Class="MSBuildRunnerGUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MSBuildRunnerGUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MSBuildRunnerGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance {x:Type local:MainWindowViewModel},
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:BoolToSegoeGlyphConverter x:Key="BoolToSegoeGlyph" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>


        <Menu>
            <MenuItem
                Command="{Binding ToggleSettingsCommand}"
                Header="_Settings"
                IsChecked="{Binding SettingsActive}" />
        </Menu>

        <Border
            Grid.Row="1"
            Margin="5"
            Padding="5"
            BorderBrush="Gray"
            BorderThickness="1"
            Visibility="{Binding SettingsActive, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />

                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Right">
                    Path to msbuild.exe
                </Label>
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Right">
                    Commandline to execute. Use %msbuild% as template
                </Label>

                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    Text="{Binding Settings.MsBuildPath, Delay=500, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    Text="{Binding Settings.MsBuildCommandLine, Delay=500, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    Text="{Binding Settings.ValidMsBuildPath, Converter={StaticResource BoolToSegoeGlyph}}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    Text="{Binding Settings.ValidMsCommandLine, Converter={StaticResource BoolToSegoeGlyph}}" />

            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label>Directory</Label>
            <TextBox VerticalContentAlignment="Center">Path to directory</TextBox>
            <Button>Load</Button>
        </StackPanel>

        <TreeView Grid.Row="3">
            <TreeViewItem Header="Level 1" IsExpanded="True">
                <TreeViewItem Header="Level 2.1" />
                <TreeViewItem Header="Level 2.2" IsExpanded="True">
                    <TreeViewItem Header="Level 3.1" />
                    <TreeViewItem Header="Level 3.2" />
                </TreeViewItem>
                <TreeViewItem>
                    <TreeViewItem.Template>
                        <ControlTemplate>
                            <Button>FGooo</Button>
                        </ControlTemplate>
                    </TreeViewItem.Template>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>

    </Grid>
</Window>
